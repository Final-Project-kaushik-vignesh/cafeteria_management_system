<%= form_with(url: menu_items_path , method: "post", class: "Add_Todo") do |menu_item| %>
                <%= menu_item.text_field :name, placeholder: "Item Name" ,class: "InputTodo-text" , required: true%>
                <%= menu_item.number_field :price, placeholder: "Item Price" ,class: "InputTodo-text" , required: true%>
                <%= menu_item.text_field :description, placeholder: "Item description" ,class: "InputTodo-text" , required: true%>
                <%= menu_item.submit :"Add", class: "InputTodo-submit" %>
<% end %>

