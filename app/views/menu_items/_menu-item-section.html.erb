<section class="Menu-display">
    <ul>
        <% @menu_item.all.each do |menu_item| %>
            <li class="MenuItem">
                <p><%= menu_item.id%></p>
                <p><%= menu_item.name%></p>
                <p><%= menu_item.price%></p>
                <p><%= menu_item.description%></p>
                <%= form_with(url: order_items_path, method: "post") do  %>
                   <%= hidden_field_tag :menu_item_id, :value => params[:"#{menu_item.id}"] %>
                   <%= number_field_tag :quantity, value: "1" ,class: "MenuItem-price" %>
                   <%= image_submit_tag("add.png")%>
                <% end %>
            </li>
        <% end %>
    </ul>
   
</section
